<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.utd.aos</groupId>
  <artifactId>mutex</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.plugin}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>edu.utd.aos.mutex.core.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <lombok.version>1.18.10</lombok.version>
    <maven.shade.plugin>2.3</maven.shade.plugin>
    <apache.commons.version>2.6</apache.commons.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <google.gson.version>2.8.5</google.gson.version>
    <tinylog.impl.version>2.0.0</tinylog.impl.version>
    <tinylog.api.version>2.0.0</tinylog.api.version>
    <jdk.version>1.8</jdk.version>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
</project>

